---
import BaseLayout from './BaseLayout.astro';

interface Props {
  frontmatter?: {
    title: string;
    description: string;
    publishDate: string;
    author?: string;
    category: 'opinion' | 'research';
  };
  title?: string;
  description?: string;
  publishDate?: Date | string;
  author?: string;
  category?: 'opinion' | 'research';
}

// Support both direct props and MDX frontmatter object
const props = Astro.props.frontmatter || Astro.props;
const {
  title,
  description,
  publishDate: rawDate,
  author = 'PowerEurope',
  category = 'research',
} = props;

// Handle both Date objects and date strings from MDX frontmatter
const publishDate = rawDate instanceof Date ? rawDate : new Date(rawDate as string);

const formattedDate = publishDate.toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const dateIso = rawDate instanceof Date ? rawDate.toISOString() : String(rawDate);

const categoryLabel = category === 'opinion' ? 'Opinion' : 'Research';
---

<BaseLayout title={`${title} | PowerEurope`} description={description}>
  <article class="section">
    <div class="container-narrow">
      <!-- Header -->
      <header class="mb-12 border-b border-ink-200 pb-8">
        <div class="flex items-center gap-3 mb-4">
          <span class="label">{categoryLabel}</span>
          <span class="text-ink-300">Â·</span>
          <time datetime={dateIso} class="text-sm text-ink-500">
            {formattedDate}
          </time>
        </div>

        <h1 class="mb-6">{title}</h1>

        <p class="text-xl text-ink-600 leading-relaxed">
          {description}
        </p>

        <div class="mt-6 text-sm text-ink-500">
          By <span class="font-medium text-ink-900">{author}</span>
        </div>
      </header>

      <!-- Content -->
      <div class="prose">
        <slot />
      </div>

      <!-- Footer -->
      <footer class="mt-16 pt-8 border-t border-ink-200">
        <div class="border-l-2 border-ink-950 pl-5">
          <p class="font-semibold mb-2">Join the Movement</p>
          <p class="text-ink-600 text-sm mb-4">
            Help us build a future where Europe has the energy to compete, defend, and thrive.
          </p>
          <a href="/join" class="btn btn-primary">
            Get Involved
          </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>
