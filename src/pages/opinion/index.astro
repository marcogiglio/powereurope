---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const articles = (await getCollection('opinion'))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout title="Opinion | PowerEurope" description="Analysis, commentary, and policy positions on European energy sovereignty.">
  <section class="section">
    <div class="container-narrow">
      <header class="mb-12 border-b border-ink-200 pb-8">
        <p class="label mb-4">Commentary</p>
        <h1 class="mb-4">Opinion</h1>
        <p class="text-xl text-ink-600">
          Analysis, commentary, and policy positions. We take sidesâ€”because neutrality on existential questions is not a virtue.
        </p>
      </header>

      <div class="space-y-8">
        {articles.map((article) => (
          <article class="border-b border-ink-100 pb-8">
            <time datetime={article.data.publishDate.toISOString()} class="text-sm text-ink-500 block mb-2">
              {article.data.publishDate.toLocaleDateString('en-GB', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            <h2 class="text-xl font-bold mb-2">
              <a href={`/opinion/${article.slug}`} class="hover:underline">
                {article.data.title}
              </a>
            </h2>
            <p class="text-ink-600 mb-2">{article.data.description}</p>
            <span class="text-sm text-ink-400">By {article.data.author}</span>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
