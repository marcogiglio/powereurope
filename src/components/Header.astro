---
const navItems = [
  { href: '/research', label: 'Research' },
  { href: '/data', label: 'Data' },
  { href: '/opinion', label: 'Opinion' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-ink-200">
  <nav class="container-wide flex items-center justify-between h-14">
    <a href="/" class="font-bold text-ink-950 tracking-tight">
      PowerEurope
    </a>

    <div class="hidden md:flex items-center gap-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'text-sm',
            currentPath.startsWith(item.href)
              ? 'text-ink-950'
              : 'text-ink-500 hover:text-ink-900'
          ]}
        >
          {item.label}
        </a>
      ))}
      <a href="/join" class="text-sm text-ink-950 font-medium ml-2">
        Join
      </a>
    </div>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-ink-600"
      aria-label="Menu"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-ink-100">
    <div class="py-3 px-5 space-y-2">
      {navItems.map((item) => (
        <a href={item.href} class="block py-1.5 text-sm text-ink-600 hover:text-ink-900">
          {item.label}
        </a>
      ))}
      <a href="/join" class="block py-1.5 text-sm font-medium text-ink-950">
        Join
      </a>
    </div>
  </div>
</header>

<script>
  document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
    document.getElementById('mobile-menu')?.classList.toggle('hidden');
  });
</script>
