---
const navItems = [
  { href: '/data', label: 'Data' },
  { href: '/research', label: 'Research' },
  { href: '/opinion', label: 'Opinion' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-gray-200">
  <nav class="container-wide flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-2 font-bold text-xl text-primary-900">
      <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="2"/>
        <path d="M16 6 L16 26 M10 10 L16 16 L10 22 M22 10 L16 16 L22 22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>PowerEurope</span>
    </a>

    <div class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'text-sm font-medium transition-colors',
            currentPath.startsWith(item.href)
              ? 'text-primary-700'
              : 'text-gray-600 hover:text-gray-900'
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>

    <div class="flex items-center gap-4">
      <a href="/join" class="btn btn-primary text-sm">
        Join the Movement
      </a>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-gray-900"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
    <div class="py-4 px-4 space-y-2">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block py-2 text-gray-600 hover:text-gray-900"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
