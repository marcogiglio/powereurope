---
interface Props {
  type?: 'insight' | 'warning' | 'action';
}

const { type = 'insight' } = Astro.props;

const styles = {
  insight: 'bg-primary-50 border-primary-200 text-primary-900',
  warning: 'bg-amber-50 border-amber-200 text-amber-900',
  action: 'bg-emerald-50 border-emerald-200 text-emerald-900',
};

const icons = {
  insight: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  warning: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  action: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<aside class={`rounded-xl border p-6 my-8 ${styles[type]}`}>
  <div class="flex gap-4">
    <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[type]} />
    </svg>
    <div class="prose prose-sm max-w-none">
      <slot />
    </div>
  </div>
</aside>
