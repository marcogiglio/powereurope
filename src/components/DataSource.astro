---
interface Props {
  name: string;
  url: string;
  downloadUrl?: string;
  lastUpdated?: Date;
}

const { name, url, downloadUrl, lastUpdated } = Astro.props;

const formattedDate = lastUpdated
  ? lastUpdated.toLocaleDateString('en-GB', { year: 'numeric', month: 'short' })
  : null;
---

<div class="inline-flex items-center gap-2 text-sm text-gray-500 bg-gray-50 px-3 py-2 rounded-lg border border-gray-200">
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
  </svg>
  <span>Source:</span>
  <a href={url} target="_blank" rel="noopener" class="font-medium text-primary-700 hover:underline">
    {name}
  </a>
  {formattedDate && (
    <span class="text-gray-400">({formattedDate})</span>
  )}
  {downloadUrl && (
    <a
      href={downloadUrl}
      download
      class="ml-2 text-primary-600 hover:text-primary-800"
      title="Download data"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
      </svg>
    </a>
  )}
</div>
